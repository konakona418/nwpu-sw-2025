generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
}

datasource db {
  provider = "postgresql"
}

// user - base user: customer, merchant, courier, admin
model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  name            String
  role            UserRole
  phone           String?
  profileImageUrl String?
  createdAt       DateTime @default(now())

  merchant Merchant?
  courier  Courier?

  orders Order[] @relation("CustomerOrders")
}

enum UserRole {
  CUSTOMER
  MERCHANT
  COURIER
  ADMIN
}

model Merchant {
  user          User           @relation(fields: [userId], references: [id])
  userId        Int            @id
  name          String
  address       String
  addressDetail String?
  status        MerchantStatus @default(AVAILABLE)
  description   String?
  imageUrls     String[]

  orders        Order[]
  merchantItems MerchantItem[]
}

model MerchantItem {
  id          Int      @id @default(autoincrement())
  merchantId  Int
  name        String
  price       Float
  description String?
  imageUrls   String[]
  createdAt   DateTime @default(now())

  merchant Merchant @relation(fields: [merchantId], references: [userId])
}

enum MerchantStatus {
  AVAILABLE
  UNAVAILABLE
}

model Courier {
  user   User          @relation(fields: [userId], references: [id])
  userId Int           @id
  status CourierStatus @default(UNAVAILABLE)

  orders Order[] @relation("CourierOrders")
}

enum CourierStatus {
  AVAILABLE
  UNAVAILABLE
}

model Order {
  id            Int         @id @default(autoincrement())
  customerId    Int
  merchantId    Int
  courierId     Int?
  totalAmount   Decimal     @db.Decimal(10, 2)
  status        OrderStatus @default(PENDING)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  addressDetail String?

  customer User     @relation("CustomerOrders", fields: [customerId], references: [id])
  merchant Merchant @relation(fields: [merchantId], references: [userId])
  courier  Courier? @relation("CourierOrders", fields: [courierId], references: [userId])

  review Review?

  orderStatusLogs OrderStatusLog[]
}

enum OrderStatus {
  PENDING
  ACCEPTED
  PICKING
  DELIVERING
  COMPLETED
  CANCELLED
}

model OrderStatusLog {
  id        Int         @id @default(autoincrement())
  orderId   Int
  order     Order       @relation(fields: [orderId], references: [id])
  status    OrderStatus
  message   String?
  timestamp DateTime    @default(now())
}

model Review {
  id         Int        @id @default(autoincrement())
  merchantId Int
  orderId    Int        @unique
  rating     Int
  comment    String?
  anonymous  Boolean    @default(false)
  type       ReviewType @default(DEFAULT)
  imageUrls  String[]
  createdAt  DateTime   @default(now())

  order Order @relation(fields: [orderId], references: [id])
}

enum ReviewType {
  DEFAULT
  NOT_HELPFUL
}
