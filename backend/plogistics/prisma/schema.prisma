generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

generator prismabox { 
  provider = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName = "t"
  inputModel = true
  output   = "../src/generated/prismabox"
} 

datasource db {
  provider = "postgresql"
}

// user - base user: customer, vendor, delivery, admin
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  CUSTOMER
  VENDOR
  DELIVERY
  ADMIN
}
